@model IEnumerable<Universidad.Models.Course>


@{
    ViewData["Title"] = "Cursos";
    ViewData["controller"] = "Courses";
    ViewData["Index"] = "Index";
    ViewData["Create"] = "Create";
    ViewData["Edit"] = "Edit";
    ViewData["Delete"] = "Delete";
    ViewData["BotonCrear"] = "Crear curso";
    ViewData["BotonEditar"] = "Editar curso";
    ViewData["BotonEliminar"] = "Eliminar curso";

    ViewData["modulo"] = "Cursos";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                <!-- Striped rows -->
                <div class="col-md-12 my-4">

                    <h2 class="h4 mb-1">@ViewData["modulo"]</h2>
                    @*                    <p class="mb-4">Vista de los Libros existentes</p>
                    *@
                    @{
                        if (TempData["mensaje"] != null)
                        {
                            <div class="col-12 mb-4">
                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <strong>¡Hecho</strong> @TempData["mensaje"] <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div> <!-- /. col -->
                        }
                    }

                    <div class="card shadow">
                        <div class="card-body">
                            <div class="toolbar row mb-3">
                                <div class="col">

                                    <form class="form-inline" asp-controller="@ViewData["controller"]" asp-action="@ViewData["Index"]">
                                        <div class="form-row">
                                            <div class="form-group col-auto">
                                                <label for="search" class="sr-only">Buscar</label>
                                                <input type="text" class="form-control" name="buscar" value="" placeholder="Buscar">
                                                <input type="submit" class="btn btn-secondary" value="Buscar">

                                            </div>
                                        </div>
                                    </form>

                                </div>


                                <div class="col ml-auto">
                                    <div class="dropdown float-right">
                                        <a asp-controller="@ViewData["controller"]" asp-action="@ViewData["Create"]">
                                            <button class="btn btn-primary float-right ml-3" type="button"> @ViewData["BotonCrear"] </button>
                                        </a>
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fe fe-download fe-16"></i></button>
                                        <div class="dropdown-menu" aria-labelledby="actionMenuButton">
                                            <a class="dropdown-item" href="descargar_excel_espacios">Excel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- table -->
                            <table class="table table-bordered">


                                @{
                                    if (Model.Count() == 0)
                                    {
                                        <div class="col-12 mb-4">
                                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                                <strong>No hay libros registrados</strong> Para agrega runo has click aqui <a asp-controller="@ViewData["Controller"]" asp-action="@ViewData["Create"]">@ViewData["BotonCrear"]</a> <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        </div> <!-- /. col -->
                                    }

                                    else
                                    {
                                        <thead>

                                            <tr role="row">

                                                <th>Titulo</th>
                                                <th>Creditos</th>

                                                <th>Actiones</th>
                                            </tr>
                                        </thead>

                                        foreach (var item in Model)
                                        {

                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Credito)
                                                </td>
                                              
                                                <td>
                                                    <button class="btn btn-sm dropdown-toggle" type="button" id="actionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fe fe-more-vertical fe-24"></i> </button>
                                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="actionMenuButton">
                                                        <a type="button" class="dropdown-item" asp-controller="@ViewData["Controller"]" asp-action="@ViewData["Edit"]" asp-route-id="@item.CourseId">@ViewData["BotonEditar"]</a>
                                                        <a class="dropdown-item" asp-controller="@ViewData["Controller"]" asp-action="@ViewData["Delete"]" asp-route-id="@item.CourseId">@ViewData["BotonEliminar"]</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }

                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- simple table -->
            </div> <!-- end section -->
